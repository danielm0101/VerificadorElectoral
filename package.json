{
  "name": "verificador-electoral",
  "version": "1.0.21",
  "description": "Sistema de Verificaci√≥n Electoral - E14 y E24 - Consejo Nacional Electoral de Colombia",
  "main": "electron/main.cjs",
  "author": {
    "name": "Consejo Nacional Electoral de Colombia",
    "email": "verificador@cne.gov.co"
  },
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env ELECTRON_DEV=true electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "vite build && electron .",
    "setup:python": "node tools/setup-python-portable.cjs",
    "security:keygen": "node tools/generar-llaves.cjs",
    "security:register": "node tools/registrar-usb.cjs",
    "security:serial": "node tools/leer-serial-usb.cjs",
    "security:encrypt": "node tools/encriptar-scripts.cjs",
    "security:publish": "node tools/publicar-registro.cjs --push",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.487.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "jsdom": "^28.1.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.verificador.electoral",
    "productName": "Verificador Electoral",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "r-portable",
        "to": "r-portable",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "r-scripts",
        "to": "r-scripts",
        "filter": [
          "**/*.enc"
        ]
      },
      {
        "from": "python-portable",
        "to": "python-portable",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "legalTrademarks": "Consejo Nacional Electoral de Colombia - Elecciones Congreso 2026",
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Verificador Electoral",
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "include": "build/installer.nsh",
      "artifactName": "Verificador-Electoral-Setup-${version}.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "danielm0101",
      "repo": "VerificadorElectoral"
    }
  }
}
